<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mt-8 max-w-md') do |f| %>
  <div class="field">
    <%= f.label(:email, class: "text-gray-700") %><br />
    <%= f.email_field(:email, autofocus: true, autocomplete: "email", class: 'mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"')  %>
  </div>
  <div class="field">
    <%= f.label(:password, class: "text-gray-700") %><br />
    <%= f.password_field(:password, autocomplete: "current-password", class: 'mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"') %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
